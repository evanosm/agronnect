@model AnnuaireCESI.Views.Auth.RequestAccess

<div class="container wrapper">
    <h1 class="mb-0">Demande d'accès</h1>
    <a class="text-secondary fst-italic fw-light" asp-controller="Home" asp-action="Index">Retour à l'accueil</a>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3" role="alert">
            @ViewBag.Error
        </div>
    }
    else if (ViewBag.Success != null)
    {
        <div class="alert alert-success mt-3" role="alert">
            @ViewBag.Success
        </div>
    }
    
    <form method="post" action="RequestAccess" class="mt-3">
        <div class="mb-3">
            <label>Email</label>
            <input type="email" class="form-control" name="email" id="email"/>
        </div>

        <div class="mb-3">
            <label>Demande</label>
            <textarea class="form-control" rows="3" name="details" id="details"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Envoyer</button>
    </form>
</div>