@model AnnuaireCESI.Views.Auth.Login

<div class="container wrapper">
    <h1>Se connecter</h1>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger col-12 col-md-6 mx-auto" role="alert">
            @ViewBag.Error
        </div>
    }
    <div class="d-flex flex-column align-items-center gap-3 w-100 mt-3">
        <div class="col-12 col-md-6 frost">
            <form method="post" action="/Auth/Login">
                <div class="mb-3">
                    <div class="flex-grow-1">
                        <label for="" class="form-label ">Email</label>
                        <input type="email" class="form-control" name="Email" id="Email" required>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="flex-grow-1">
                        <label for="" class="form-label ">Mot de passe</label>
                        <input type="password" class="form-control" name="Password" id="Password" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Se connecter</button>
            </form>
        </div>
        <div class="bg-secondary col-12 col-md-6 " style="height: 1px"></div>
        <div class="col-12 col-md-6 d-flex flex-column gap-2 text-center">
            <span class="text-secondary">Vous n'avez pas d'accès ?</span>
            <a asp-controller="Auth" asp-action="RequestAccess" class="btn btn-primary">Demander l'accès</a>
        </div>
    </div>
</div>

