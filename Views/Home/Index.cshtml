@model HomeViewModel

@{
    ViewData["Title"] = "Accueil";
}

<div class="hero">
    <h1 class="hero-title">Bienvenue sur <span class="text-primary">Agronnect</span></h1>
    <h1 class="mt-3 col-12 container">Découvrez :</h1>
    <div class="d-flex flex-column flex-md-row gap-3 mb-3 col-12 container justify-content-between">
        <a class="sm-card" asp-controller="Employees" asp-action="Index">
            <h3 class="text-primary">@Model.EmployeesCount</h3>
            <span>Employés</span>
        </a>
        @* --- *@
        <a class="sm-card" asp-controller="Services" asp-action="Index">
            <h3 class="text-primary">@Model.ServicesCount</h3>
            <span>Services</span>
        </a>
        @* --- *@
        <a class="sm-card">
            <h3 class="text-primary">@Model.SitesCount</h3>
            <span>Sites</span>
        </a>
    </div>
    <span class="text-secondary fst-italic fw-lighter">ou alors...</span>
    <div class="hero-buttons">
        <a asp-controller="Auth" asp-action="Login" class="btn btn-primary">Se connecter</a>
    </div>


</div>