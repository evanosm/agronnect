<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Agronnect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AnnuaireCESI.styles.css" asp-append-version="true"/>
</head>
<body class="bg-body text-light">
<div class="container fixed-top">
    <nav class="p-0 navbar navbar-expand-sm navbar-toggleable-sm  navbar-dark mb-3 mt-3 rounded-3 mx-auto"
         style="background: var(--darker)">
        <div class="container-fluid" style="padding: 16px">
            <a class="navbar-brand text-primary fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Agronnect</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Employees" asp-action="Index">Salariés</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                    </li>

                </ul>
            </div>
            <a class="nav-link btn btn-primary text-light" asp-area="" asp-controller="Auth" asp-action="Login">Se connecter</a>
        </div>
    </nav>
</div>
@RenderBody()
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>